<UserControl x:Class="VaporDAW.TrackHeadControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VaporDAW"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="100">
    <Border Name="border" BorderThickness="0 0 0 1" Width="auto">
        <StackPanel Name="header" Orientation="Vertical"  Width="100px" DockPanel.Dock="Left">
            <Label Name="titleLabel" Foreground="White" Content="Track"></Label>
        </StackPanel>            
    </Border>
</UserControl>
