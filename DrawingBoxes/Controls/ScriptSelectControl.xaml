<UserControl x:Class="VaporDAW.ScriptSelectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VaporDAW"
             mc:Ignorable="d" 
             d:DesignHeight="23" d:DesignWidth="120">
    <Grid Height="auto" Width="auto">
        <TextBox Name="scriptTextBox" Height="23" Width="auto" IsReadOnly="True" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" ></TextBox>
    </Grid>
</UserControl>
