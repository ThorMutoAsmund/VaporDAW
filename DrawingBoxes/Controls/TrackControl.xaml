<UserControl x:Class="VaporDAW.TrackControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VaporDAW"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800">
    <Border BorderBrush="#444" BorderThickness="1" Height="80" Width="auto">
        <DockPanel>
            <StackPanel Name="header" Orientation="Vertical" Background="#555" Width="100px" DockPanel.Dock="Left">
                <Label Name="titleLabel" Foreground="White" Content="Track01"></Label>
            </StackPanel>
            <Grid Name="grid" Background="#222">
            </Grid>
        </DockPanel>
    </Border>
</UserControl>
