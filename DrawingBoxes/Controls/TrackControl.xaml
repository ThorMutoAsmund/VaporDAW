<UserControl x:Class="VaporDAW.TrackControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VaporDAW"
             mc:Ignorable="d" d:DesignWidth="800" Height="80"
             >
    <Border Name="border" BorderThickness="0 0 0 1" Width="auto">
        <Canvas Name="grid" DragEnter="Canvas_DragEnterOver" DragOver="Canvas_DragEnterOver" Drop="Canvas_Drop" AllowDrop="True">
            <Canvas.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Properties..." Name="propertiesMenuItem"/>
                    <MenuItem Header="Add part..." Name="addPartMenuItem"/>
                </ContextMenu>
            </Canvas.ContextMenu>
        </Canvas>
    </Border>
</UserControl>
